.container {
  display: flex;
  flex-direction: column;
}

.head {
  text-align: left;
  margin: 20rpx 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.timeshow {
  margin-right: 45rpx;
}

.square {
  display: inline-block;
  width: 5px;
  height: 15px;
  background: blueviolet;
  vertical-align: middle;
}

.mark-title {
  margin-left: 7px;
  display: inline;
  vertical-align: middle;
}

.aline {
  margin: 15rpx 15rpx;
  background: #E0E3DA;
  width: 90vw;
  height: 1px;
}

.body {
  margin: 0;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}

textarea {
  height: 150rpx;
  width: 80vw;
  padding: 15rpx;
  border: 1px dashed #eee;
}

.footer {
  margin: 22rpx;
}

.newcommenttxt {
  margin: 24rpx;
}

.btn {
  text-align: right;
}

.favorite {
  text-align: center;
}

.comment {}

.commentItem {
  border-top: 1rpx solid rgba(57, 69, 69, 0.2);
  margin: 24rpx;
  padding-top: 23rpx;
}

.commetinfo {
  display: flex;
  justify-content: space-between;
}

.commerHead {
  margin-right: 16rpx;
  vertical-align: middle;
  font-size: medium;
}

.commenttext {
  margin: 16rpx 6rpx;
  padding: 4rpx;
}